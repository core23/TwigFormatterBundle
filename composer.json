{
  "name": "core23/twig-formatter-bundle",
  "type": "symfony-bundle",
  "description": "This bundle provides a twig formatter for the Sonata FormatterBundle.",
  "keywords": [
    "symfony",
    "formatter",
    "twig",
    "sonata"
  ],
  "homepage": "https://core23.de",
  "license": "MIT",
  "authors": [
    {
      "name": "Christian Gripp",
      "email": "mail@core23.de"
    }
  ],
  "require": {
    "php": "^7.2",
    "sonata-project/formatter-bundle": "^4.0",
    "symfony/config": "^4.2 || ^5.0",
    "symfony/dependency-injection": "^4.2 || ^5.0",
    "symfony/expression-language": "^4.2 || ^5.0",
    "symfony/framework-bundle": "^4.2 || ^5.0",
    "symfony/http-foundation": "^4.2 || ^5.0",
    "symfony/http-kernel": "^4.2 || ^5.0",
    "twig/twig": "^2.4"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.2",
    "sllh/composer-lint": "^1.0"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.x-dev"
    }
  },
  "autoload": {
    "psr-4": {
      "Core23\\TwigFormatterBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Core23\\TwigFormatterBundle\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@composer bin all install --ansi"
    ],
    "post-update-cmd": [
      "@composer bin all update --ansi"
    ]
  }
}
